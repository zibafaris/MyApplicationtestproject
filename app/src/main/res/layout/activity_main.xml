<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="First quarter"
            android:textColor="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:text="JAN"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#172BCA"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="255dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/janr"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:text="FEB"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#172BCA"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="255dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/febuary"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />
        </LinearLayout>


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="135dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:inputType="textAutoComplete"
            android:text="MAR"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="#172BCA"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="255dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@drawable/march"
            android:scaleType="centerCrop"
            tools:ignore="MissingConstraints" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="Secound quarter"
            android:textColor="@android:color/holo_red_dark"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:text="APR"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#172BCA"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="255dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/april"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:text="MAY"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="#172BCA"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="255dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/may"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="135dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:text="JUN"
                android:textSize="20dp"
                android:background="#172BCA"
                android:textColor="#fff"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="255dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/june"
                android:scaleType="centerCrop"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>